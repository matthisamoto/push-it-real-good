<div class="user-info"> 
	<%= link_to "", root_path, :class => "small-logo" %>
<div class="user-bar clearfix">
  <h1 class="whose-pages terms-of-use">CREATE YOUR OWN BUTTON</h1>
  <div class="user-bar-border"></div>
</div>
</div>

<%= form_for(:page, :url => {:action => 'create'}) do |f| %>

  <div class="create-new-mask">
	
    <h1 class="header sound-header">Select your sound.</h1>

    <div class="form-division search-tracks">
	
	  <%= render "page/select_sound" %>
	
    </div>

    <h1 class="track-name clearfix"></h1>
    <div class="id-container">
      <input type="hidden" name="page[sound_url]" id="page_sound_url" class="url" value="" />
	  <input type="hidden" name="page[track_name]" id="page_track_name" class="url" value="" />
	  <input type="hidden" name="page[track_url]" id="page_track_url" class="url" value="" />
	  <input type="hidden" name="page[track_author]" id="page_track_author" class="url" value="" />
	  <input type="hidden" name="page[track_author_url]" id="page_track_author_url" class="url" value="" />
    </div>

    <h1 class="header button-header">Build your button.</h1>
     
    <div class="form-division choose-button">
	  <div class="division-inner">
      
	    <div class="choose-buttons clearfix">
	      <div class="image-preview">
	        <h1 class="title-preview">My Title</h1>
		    <span class="button-preview">Image Preview will appear here.</span>
		  </div>

		  <div class="button-style">
		    <p class="button-style-label"><%= f.label "Choose Button Style:" %></p>
	        <p><%= select_tag "button_style_name", options_for_select(@options, @options[0]), :size => @options.count %></p>
		  </div>
	    </div>

	    <div class="choose-color clearfix"></div>

	    <div class="naming">
	      <p class="inputs clearfix"><%= f.label :title_url, "http://pushitrealgood.com/page/" %> <%= f.text_field :title_url, :maxlength => 16, :autocomplete => "off" %> </p>
	      <p class="inputs clearfix"><%= f.label :tagline, "Title for your page: " %> <%= f.text_field :tagline, :maxlength => 150 %> </p>
	    </div>

	    <div class="button-url"></div>

	    <p><%= f.submit "Create My Page", :class => "create-new-button", :id => "create-new-button" %></p>
	  </div>
    </div>

  </div>

<% end %>
