<%= form_for(:page, :url => {:action => 'create'}) do |f| %>
  
  <div><%= f.label "Choose Sound" %><br />
  <%= f.text_field :sound_url %></div>

  <div><%= f.label "Choose Button" %><br />
  <%= f.text_field :button_url %></div>

  <div><%= f.label "Name your page" %><br />
  <%= f.text_field :title_url %></div>

  <div><%= f.label "Choose a tagline" %><br />
  <%= f.text_field :tagline %></div>

  <div><%= f.submit "Create My Page" %></div>

<% end %>