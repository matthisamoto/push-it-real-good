<div class="nav_bar clearfix">
  <div class="session_status">
    <% if user_signed_in? %>
      Logged in as <%= current_user.email %>. Not you?
      <%= link_to "Sign out", destroy_user_session_path, :method => 'delete' %>
    <% else %>
      <%= link_to "Login", new_user_session_path %> or <%= link_to "Register", new_user_registration_path %>
    <% end %>
  </div>
</div>

<%= Rails.env %>

<div class="push-it">
  <a href="<%= @track.permalink_url %>" class="play no-underline" ><img src="images/button.png" alt="Button" class ="button" /></a>
  <!-- <%= @track.to_a %> -->
</div>

<script type="text/javascript">
  var clip = document.createElement('audio');
  clip.src = "<%= @track.stream_url %>?client_id=72325d0b84c6a7f4bbef4dd86c0a5309";
  clip.load();
  clip.autobuffer = true;
  clip.preload = 'auto';
  $('.push-it').append(clip);
  $('.play').click( function(e) {
	e.preventDefault();
	clip.play();
  });
</script>