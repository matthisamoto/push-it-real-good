<div class="vince-container">
  <div class="vince-head"><a href="#" class="play no-underline" ><img src="/images/vince/head.png" alt="Button" class ="push-button" /></a></div>
  <div class="vince-background"></div>
  <div class="vince-from">
	<img src="<%= @track.artwork_url %>"/>
	<p class="vince-header"><%= @track.title %></p>
  	<div class="vince-deliver"></div>
  </div>
  <div class="vince-brought"></div>
  
</div>
</div>


<script type="text/javascript">

  var clip = document.createElement('audio');
  clip.src = "http://api.soundcloud.com/tracks/<%= @track.id %>/stream?client_id=72325d0b84c6a7f4bbef4dd86c0a5309";
  clip.load();
  clip.autobuffer = true;
  clip.preload = 'auto';
  $('.push-it').append(clip);
  $('.play').click( function(e) {
	e.preventDefault();
	clip.play();
	$('.vince-head img').attr('src','/images/vince/head.gif');
	var timeout = window.setTimeout( function () { $('.vince-head img').attr('src','/images/vince/head.png'); }, 5000);
  });

  $('.vince-brought').click( function() { window.location = 'http://pushitrealgood.com'; });
  $('.vince-deliver').click( function() { window.location.reload(); });

</script>